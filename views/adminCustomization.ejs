    <script>
        // Load data on page load
        loadFAQs();

        // Function to load FAQs from the server
        async function loadFAQs() {
            try {
                const response = await fetch('/admin/dashboard/customization/faq');
                const faqs = await response.json();
                const faqList = document.getElementById('faqList');
                faqList.innerHTML = ''; // Clear existing content

                faqs.forEach(faq => {
                    const faqItem = document.createElement('div');
                    faqItem.classList.add('faq-item');
                    faqItem.innerHTML = `
                        <h5>${faq.question}</h5>
                        <p>${faq.answer}</p>
                        <button class="btn btn-warning btn-sm" onclick="editFAQ(${faq.id}, '${faq.question}', '${faq.answer}')">Edit</button>
                        <hr>
                    `;
                    faqList.appendChild(faqItem);
                });
            } catch (error) {
                console.error('Error loading FAQs:', error);
            }
        }

        // Submit handler for FAQ Form
        document.getElementById('faqForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            const question = document.getElementById('question').value;
            const answer = document.getElementById('answer').value;

            try {
                const response = await fetch('/admin/dashboard/customization/faq', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ question, answer })
                });

                const data = await response.json();
                document.getElementById('faqResponse').innerText = data.message;
                if (response.ok) {
                    document.getElementById('faqForm').reset();
                    loadFAQs(); // Refresh the FAQ list
                }
            } catch (error) {
                console.error('Error adding FAQ:', error);
            }
        });

        // Function to edit FAQ
        function editFAQ(id, question, answer) {
            document.getElementById('question').value = question;
            document.getElementById('answer').value = answer;
            // Set a data attribute for the form to indicate editing
            document.getElementById('faqForm').setAttribute('data-edit-id', id);
        }

    </script>
