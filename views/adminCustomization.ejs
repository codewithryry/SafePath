<div class="container mt-4">
    <div class="row">
        <!-- Left Side: Forms for Adding FAQ and About Us Content -->
        <div class="col-md-6">
            <!-- FAQ Form Container -->
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Add FAQ</h4>
                </div>
                <div class="card-body">
                    <form id="faqForm">
                        <div class="form-group">
                            <label for="question">Question:</label>
                            <input type="text" id="question" class="form-control" placeholder="Enter your question here..." required>
                        </div>
                        <div class="form-group">
                            <label for="answer">Answer:</label>
                            <textarea id="answer" class="form-control" rows="4" placeholder="Provide the answer here..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Add FAQ</button>
                    </form>
                    <div id="faqResponse" class="mt-3"></div>
                </div>
            </div>

            <!-- About Us Form Container -->
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Add About Us Content</h4>
                </div>
                <div class="card-body">
                    <form id="aboutUsForm">
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input type="text" id="title" class="form-control" placeholder="Enter title here..." required>
                        </div>
                        <div class="form-group">
                            <label for="description">Description:</label>
                            <textarea id="description" class="form-control" rows="4" placeholder="Enter description here..." required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="image_url">Image URL:</label>
                            <input type="text" id="image_url" class="form-control" placeholder="Enter image URL here..." required>
                        </div>
                        <div class="form-group">
                            <label for="alt_text">Image Alt Text:</label>
                            <input type="text" id="alt_text" class="form-control" placeholder="Enter image alt text here..." required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Add About Us Content</button>
                    </form>
                    <div id="aboutUsResponse" class="mt-3"></div>
                </div>
            </div>
        </div>

        <!-- Right Side: Display Existing FAQs and About Us Content -->
        <div class="col-md-6">
            <!-- Existing FAQs -->
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Existing FAQs</h4>
                </div>
                <div class="card-body" id="faqList">
                    <!-- FAQ items will be populated here -->
                </div>
            </div>

            <!-- Existing About Us Content -->
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Existing About Us Content</h4>
                </div>
                <div class="card-body" id="aboutUsList">
                    <!-- About Us items will be populated here -->
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Function to load FAQs from the server
async function loadFAQs() {
    try {
        const response = await fetch('/admin/dashboard/customization/faq');
        const faqs = await response.json();
        const faqList = document.getElementById('faqList');
        faqList.innerHTML = ''; // Clear existing content

        faqs.forEach(faq => {
            const faqItem = document.createElement('div');
            faqItem.classList.add('faq-item');
            faqItem.innerHTML = `
                <h5>${faq.question}</h5>
                <p>${faq.answer}</p>
                <button class="btn btn-warning btn-sm" onclick="editFAQ(${faq.id}, '${faq.question}', '${faq.answer}')">Edit</button>
                <hr>
            `;
            faqList.appendChild(faqItem);
        });
    } catch (error) {
        console.error('Error loading FAQs:', error);
    }
}

// Function to load About Us content from the server
async function loadAboutUs() {
    try {
        const response = await fetch('/admin/dashboard/customization/aboutus');
        const aboutUsList = await response.json();
        const aboutUsContent = document.getElementById('aboutUsList');
        aboutUsContent.innerHTML = ''; // Clear existing content

        aboutUsList.forEach(item => {
            const aboutUsItem = document.createElement('div');
            aboutUsItem.classList.add('about-us-item');
            aboutUsItem.innerHTML = `
                <h5>${item.title}</h5>
                <p>${item.description}</p>
                <img src="${item.image_url}" alt="${item.alt_text}" style="width: 100%; height: auto;">
                <button class="btn btn-warning btn-sm" onclick="editAboutUs(${item.id}, '${item.title}', '${item.description}', '${item.image_url}', '${item.alt_text}')">Edit</button>
                <hr>
            `;
            aboutUsContent.appendChild(aboutUsItem);
        });
    } catch (error) {
        console.error('Error loading About Us content:', error);
    }
}

// Load data on page load
loadFAQs();
loadAboutUs();

// Submit handler for FAQ Form
document.getElementById('faqForm').addEventListener('submit', async function(event) {
    event.preventDefault();

    const question = document.getElementById('question').value;
    const answer = document.getElementById('answer').value;

    try {
        const response = await fetch('/admin/dashboard/customization/faq', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ question, answer })
        });

        const data = await response.json();
        document.getElementById('faqResponse').innerText = data.message;
        if (response.ok) {
            document.getElementById('faqForm').reset();
            loadFAQs(); // Refresh the FAQ list
        }
    } catch (error) {
        console.error('Error adding FAQ:', error);
    }
});

// Submit handler for About Us Form
document.getElementById('aboutUsForm').addEventListener('submit', async function(event) {
    event.preventDefault();

    const title = document.getElementById('title').value;
    const description = document.getElementById('description').value;
    const image_url = document.getElementById('image_url').value;
    const alt_text = document.getElementById('alt_text').value;

    try {
        const response = await fetch('/admin/dashboard/customization/aboutus', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ title, description, image_url, alt_text })
        });

        const data = await response.json();
        document.getElementById('aboutUsResponse').innerText = data.message;
        if (response.ok) {
            document.getElementById('aboutUsForm').reset();
            loadAboutUs(); // Refresh the About Us list
        }
    } catch (error) {
        console.error('Error adding About Us content:', error);
    }
});

// Function to edit FAQ
function editFAQ(id, question, answer) {
    document.getElementById('question').value = question;
    document.getElementById('answer').value = answer;
    // Set a data attribute for the form to indicate editing
    document.getElementById('faqForm').setAttribute('data-edit-id', id);
}

// Function to edit About Us content
function editAboutUs(id, title, description, image_url, alt_text) {
    document.getElementById('title').value = title;
    document.getElementById('description').value = description;
    document.getElementById('image_url').value = image_url;
    document.getElementById('alt_text').value = alt_text;
    // Set a data attribute for the form to indicate editing
    document.getElementById('aboutUsForm').setAttribute('data-edit-id', id);
}
</script>

