<!-- Header -->
<header class="bg-light py-3 shadow-sm sticky-header">
    <div class="container d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <a href="/" class="logo d-flex align-items-center ml-2">
                <img src="images/logomisnu.png" alt="SafePath Logo" class="logo-img mr-2">
                <span class="logo-text font-weight-bold">SafePath</span>
            </a>
        </div>
        <nav id="nav" class="nav-links d-none d-lg-flex">
            <ul class="nav-links" id="navbar">
                <li><a href="/">Home</a></li>
                <li><a href="/advocacy">Advocacy</a></li>
                <li><a href="#contact">Contact Us</a></li>
                <li><a href="/user/feedback">Feedback</a></li>
            </ul>
        </nav>
        <button class="navbar-toggler d-lg-none" type="button" id="menuToggle" aria-expanded="false">
            â˜°
        </button>
    </div>
</header>

<!-- Mobile Dropdown Transparent Menu -->
<div class="dropdown-menu-container sliding-menu d-lg-none" id="mobileMenu">

        <ul class="menu-links">
            <li><a href="/" class="nav-link">Home</a></li>
            <li><a href="/advocacy" class="nav-link">Advocacy</a></li>
            <li><a href="#contact" class="nav-link">Contact Us</a></li>
            <li><a href="/user/feedback" class="nav-link">Feedback</a></li>
        </ul>
    </div>
</div>

<style>
/* Sliding menu container */
.sliding-menu {
    display: none;
    position: fixed;
    top: 0;
    right: -100%;
    height: 100%;
    width: 70%;
    max-width: 300px;
    background-color: rgba(255, 255, 255, 0.9);
    box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
    transition: right 0.3s ease;
    z-index: 1050;
    padding: 20px;
}

.sliding-menu.active {
    display: block;
    right: 0;
}

/* Content inside sliding menu */
.menu-content {
    display: flex;
    flex-direction: column;
    width: 100%;
}

/* Text section for the welcome message */
.menu-text {
    margin-bottom: 20px;
    color: #333;
}

.welcome-message {
    font-size: 18px;
    font-weight: bold;
    color: #007BFF;
}

.priority-message {
    font-size: 16px;
    font-style: italic;
    color: #555;
}

/* Menu links section */
.menu-links {
    list-style: none;
    padding: 0;
    margin: 0;
}

.menu-links li {
    margin: 10px 0;
}

.menu-links li a {
    text-decoration: none;
    font-size: 18px;
    color: #333;
    transition: color 0.3s;
}

.menu-links li a:hover {
    color: #007BFF;
}

/* Navbar Toggle Button */
.navbar-toggler {
    font-size: 1.5rem;
    background: none;
    border: none;
    cursor: pointer;
    color: #333;
}

/* Style the Test Mode message */
.test-mode-message {
    background-color: #f8d7da;
    color: #721c24;
    padding: 10px;
    margin: 5px 0;
    border-radius: 5px;
    font-weight: bold;
    text-align: center;
}



</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const menuToggle = document.getElementById('menuToggle');
    const mobileMenu = document.getElementById('mobileMenu');

    menuToggle.addEventListener('click', function (e) {
        e.stopPropagation(); // Prevent propagation to the window click event
        const isActive = mobileMenu.classList.contains('active');
        mobileMenu.classList.toggle('active', !isActive);
        menuToggle.setAttribute('aria-expanded', !isActive);
    });

    // Close menu if clicking outside the menu
    window.addEventListener('click', function (event) {
        if (!mobileMenu.contains(event.target) && !menuToggle.contains(event.target)) {
            mobileMenu.classList.remove('active');
            menuToggle.setAttribute('aria-expanded', false);
        }
    });

    // Prevent menu close when clicking inside the menu
    mobileMenu.addEventListener('click', function (event) {
        event.stopPropagation();
    });
});

</script>
