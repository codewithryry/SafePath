<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="SafePath is a platform for reporting bullying incidents and seeking support.">
    <meta name="author" content="Reymel Rey Mislang">
    <title>Admin Dashboard | Bullying Reporting System</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <script src="/script/script.js" defer></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-21ZRHLSG08"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f4f7fa;
        }
        .chart-container {
            max-width: 600px;
            margin: 0 auto;
        }
        .small-chart {
            width: 100% !important;
            height: 300px !important;
        }
        .status-counts {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
            margin-top: 20px;
            background-color: #ffffff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .status-counts h3 {
            margin-bottom: 15px;
        }
        .status-counts .list-group-item {
            background-color: transparent;
            border: none;
        }
        .status-dropdown {
            padding: 0.4rem;
            font-size: 0.9rem;
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
        }
        .date {
            font-size: 0.9rem;
            color: #6c757d;
            margin-right: 1rem;
        }
        .clock {
            font-size: 0.9rem;
            color: #6c757d;
            margin-right: 1rem;
        }
        .notification-bell {
            position: relative;
            margin-right: 1rem;
            color: #6c757d;
        }
        .notification-bell i {
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <header class="bg-light py-3 shadow-sm sticky-header">
        <div class="container d-flex align-items-center">
            <div class="d-flex align-items-center">
                <a href="/" class="logo d-flex align-items-center">
                    <img src="/images/logomisnu.png" alt="SafePath Logo" class="logo-img mr-2">
                    <span class="logo-text font-weight-bold">SafePath</span>
                    <span class="login-text ml-1 font-weight-bold text-dark">Dashboard</span>
                </a>
            </div>
            <!-- Right-side section with date, clock, notification bell, and logout -->
            <div class="ml-auto d-flex align-items-center">
                <!-- Date Display -->
                <span class="date" id="currentDate"></span>
                <!-- Clock Display -->
                <span class="clock" id="currentClock"></span>
                <a href="/admin/login" class="text-dark">
                    <i class="fas fa-sign-out-alt fa-lg"></i>
                </a>
            </div>
        </div>
    </header>
    
    <script>
        // JavaScript to dynamically update the date and 24-hour clock
        document.addEventListener("DOMContentLoaded", function() {
            const dateElement = document.getElementById("currentDate");
            const clockElement = document.getElementById("currentClock");

            // Function to update the date
            const updateDate = () => {
                const options = { year: 'numeric', month: 'long', day: 'numeric' };
                dateElement.textContent = new Date().toLocaleDateString(undefined, options);
            };

            // Function to update the clock
            const updateClock = () => {
                const now = new Date();
                const hours = String(now.getHours()).padStart(2, '0');
                const minutes = String(now.getMinutes()).padStart(2, '0');
                const seconds = String(now.getSeconds()).padStart(2, '0');
                clockElement.textContent = `${hours}:${minutes}:${seconds}`;
            };

            // Initial update
            updateDate();
            updateClock();

            // Update every second
            setInterval(updateClock, 1000);
        });
    </script>
</body>
</html>
