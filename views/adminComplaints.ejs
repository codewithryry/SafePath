<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="SafePath is a platform for reporting bullying incidents and seeking support.">
    <meta name="author" content="Reymel Rey Mislang">
    <title>Complaint Dashboard | Bullying Reporting System</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <script src="/script/script.js" defer></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-21ZRHLSG08"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f4f7fa;
        }
        .chart-container {
            max-width: 600px;
            margin: 0 auto;
        }
        .small-chart {
            width: 100% !important;
            height: 300px !important;
        }
        .status-counts {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
            margin-top: 20px;
            background-color: #ffffff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        /* Styling for Date and Clock */
        .date-time-container {
            font-size: 18px;
            color: #fff;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        /* Add underline to active nav links */
        .nav-links a.active {
            text-decoration: underline;
            font-weight: bold; /* Optional: make active link bold */
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="bg-light py-3 shadow-sm sticky-header">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a href="/" class="logo d-flex align-items-center">
                    <img src="/images/logomisnu.png" alt="SafePath Logo" class="logo-img mr-2">
                    <span class="logo-text font-weight-bold">SafePath</span>
                    <span class="login-text ml-1 font-weight-bold text-dark">Dashboard</span>
                </a>
            </div>
            <nav id="nav" class="nav-links">
                <ul class="nav-links" id="navbar">
                    <li><a href="/admin/dashboard" >Home</a></li>
                    <li><a href="/admin/dashboard/complaints" class="active">Complaints</a></li>
                    <li><a href="/admin/dashboard/feedback">Feedback</a></li>
                    <li><a href="/admin/dashboard/customization">Customization</a></li>
                    <li><a href="/admin/logout">Logout</a></li>
                </ul>        
            </nav>
        </div>
    </header>

    <script>
        // Add event listeners to nav links
        const navLinks = document.querySelectorAll('#navbar a');
        
        navLinks.forEach(link => {
            link.addEventListener('click', function() {
                // Remove active class from all links
                navLinks.forEach(nav => nav.classList.remove('active'));
                // Add active class to the clicked link
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>

<br>

<div class="col-12 mb-4">
    <div class="card border-0 shadow">
        <div class="card-body">
            <h4 class="card-title text-left">Complaints</h4>
            <br>
            <div class="table-responsive">
                <table id="complaintsTable" class="table table-hover table-striped align-middle">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th scope="col">Student ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Issue Type</th>
                            <th scope="col">Description</th>
                            <th scope="col">Contact Method</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (complaints && complaints.length > 0) { %>
                            <% const latestComplaints = complaints.slice(-5); %>
                            <% latestComplaints.forEach(complaint => { %>
                                <tr>
                                    <td><%= complaint.student_id %></td>
                                    <td><%= complaint.name %></td>
                                    <td><%= complaint.email %></td>
                                    <td><%= complaint.issue_type %></td>
                                    <td><%= complaint.issue_description %></td>
                                    <td><%= complaint.contact_method %></td>
                                    <td><%= complaint.phone_number %></td>
                                    <td>
                                        <select class="form-select status-dropdown rounded-pill" data-id="<%= complaint.id %>">
                                            <option value="pending" <%= complaint.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="in_progress" <%= complaint.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                                            <option value="resolved" <%= complaint.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                                            <option value="rejected" <%= complaint.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                                        </select>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">No complaints available.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>                
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Initialize DataTable with pagination and search features
        $('#complaintsTable').DataTable({
            "paging": true,       // Enable pagination
            "lengthMenu": [5, 10, 25],  // Options for the number of entries to show
            "pageLength": 5,     // Default number of entries to show
            "searching": true,    // Enable searching
            "lengthChange": true  // Allow the user to change the number of entries displayed
        });
    });
</script>

