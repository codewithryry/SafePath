<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="SafePath is a platform for reporting bullying incidents and seeking support.">
    <meta name="author" content="Reymel Rey Mislang">
    <title>Feedback Dashboard | Bullying Reporting System</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <script src="/script/script.js" defer></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-21ZRHLSG08"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f4f7fa;
        }
        .chart-container {
            max-width: 600px;
            margin: 0 auto;
        }
        .small-chart {
            width: 100% !important;
            height: 300px !important;
        }
        .status-counts {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
            margin-top: 20px;
            background-color: #ffffff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        /* Styling for Date and Clock */
        .date-time-container {
            font-size: 18px;
            color: #fff;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        /* Add underline to active nav links */
        .nav-links a.active {
            text-decoration: underline;
            font-weight: bold; /* Optional: make active link bold */
        }
        .table-responsive {
            width: 100%; /* Makes the table responsive */
            max-width: 1500px; /* Set a max-width as needed */
        }
        #feedbackTable {
            width: 100%; /* Ensures the table takes full width of its container */
        }
    </style>
</head>
<body>  <!-- Header -->
    <header class="bg-light py-3 shadow-sm sticky-header">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a href="/" class="logo d-flex align-items-center">
                    <img src="/images/logomisnu.png" alt="SafePath Logo" class="logo-img mr-2">
                    <span class="logo-text font-weight-bold">SafePath</span>
                    <span class="login-text ml-1 font-weight-bold text-dark">Dashboard</span>
                </a>
            </div>
            <nav id="nav" class="nav-links">
                <ul class="nav-links" id="navbar">
                    <li><a href="/admin/dashboard">Home</a></li>
                    <li><a href="/admin/dashboard/complaints">Complaints</a></li>
                    <li><a href="/admin/dashboard/feedback" class="active">Feedback</a></li>
                    <li><a href="/admin/dashboard/customization">Customization</a></li>
                    <li><a href="/admin/logout">Logout</a></li>
                </ul>        
            </nav>
        </div>
    </header>

    <script>
        // Add event listeners to nav links
        const navLinks = document.querySelectorAll('#navbar a');
        
        navLinks.forEach(link => {
            link.addEventListener('click', function() {
                // Remove active class from all links
                navLinks.forEach(nav => nav.classList.remove('active'));
                // Add active class to the clicked link
                this.classList.add('active');
            });
        });
    </script>

  <br>
    <!-- Feedback Section -->
    <div class="col-12 mb-4">
        <div class="card border-0 shadow">
            <div class="card-body feedback-container">
                <h4 class="card-title text-left">Feedback</h4>
                <div class="table-responsive">
                    <table id="feedbackTable" class="table table-hover table-striped align-middle">
                        <thead class="bg-primary text-white">
                            <tr>
                                <th>Name</th>
                                <th>Feedback</th>
                                <th>Rating</th>
                                <th>Suggestions</th>
                                <th>Recommend</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (feedback && feedback.length > 0) { 
                                // Get the last 5 feedback items
                                const latestFeedback = feedback.slice(-5); %>
                                <% latestFeedback.forEach(item => { %>
                                    <tr>
                                        <td><%= item.name %></td>
                                        <td><%= item.feedback %></td>
                                        <td><%= item.rating %></td>
                                        <td><%= item.suggestions %></td>
                                        <td><%= item.recommend ? 'Yes' : 'No' %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center">No feedback available.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/adminFooter') %>
    <%- include('partials/adminScript') %>
</body>
</html>
